{% extends '::adminbase.html.twig' %}
{% block username %}{{user.username}}{% endblock %}
{% block menue3active %} active {% endblock %}
{% block title %}Events{% endblock %}
{% block content %}
<!-- BEGIN CONTENT -->
	<div class="page-content-wrapper">
		<div class="page-content">
		
			<h3 class="page-title">
			Events 
			</h3>
			<div class="page-bar">
				<ul class="page-breadcrumb">
					<li>
						<i class="fa fa-home"></i>
						<a href="">Events</a>
						
					</li>
					
				</ul>
				<div class="page-toolbar">
						<div class="btn-group pull-right">
							
							<a href="{{path('admin_newevent')}}" class="btn btn-circle green">
							Add Event <i class="fa fa-plus"></i>
					        </a>
							
						</div>
					</div>
				<div>
					
			    </div>
			</div>
			<!-- END PAGE HEADER-->
			<!-- BEGIN PAGE CONTENT-->
			<div class="row">
				<div class="col-md-12">
						<div class="row">
							{% for item in events %}
							<div class="col-sm-12 col-md-6">
								<div class="thumbnail">
									{% if item.images is not empty %}
									<img src="{{asset('assets/images/Events/')}}{{item.images[0].url}}" alt="" style="width: 50%; height: 200px;">
									{% endif %}
									<div class="caption">
										<a href="{{path('admin_event' , {'eventid' : item.id } )}}" title="{{item.name}}">
									      <h3>{{item.name}}</h3></a>
										
										<p>
											<a href="{{path('admin_editevent' , {'eventid' : item.id } )}}" class="btn blue">
											Edit </a>
											
										</p>
									</div>
								</div>
							</div>
							{% endfor %}
						</div>
					
				</div>
			</div>
			<!-- END PAGE CONTENT-->
		</div>
	</div>
<!-- END CONTENT -->

{% endblock %}