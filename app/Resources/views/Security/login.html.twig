{% extends "FOSUserBundle::layout.html.twig" %}

 {% block fos_user_content %}      

<!-- END SIDEBAR TOGGLER BUTTON -->
<!-- BEGIN LOGIN -->
<div class="content">

  <!-- BEGIN LOGIN FORM -->

    
   <form action="{{ path('login_check') }}"method="post" >
    <h3 class="form-title">Login to your account</h3>
    <div class="alert alert-danger display-hide">
      <button class="close" data-close="alert"></button>
      <span> 
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
      </span>
    </div>
    <div class="form-group">
      <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
      <label class="control-label visible-ie8 visible-ie9">Username</label>
      <div class="input-icon">
        <i class="fa fa-user"></i>
        <input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" id="username" name="_username"/>
      </div>
    </div>
    <div class="form-group">
      <label class="control-label visible-ie8 visible-ie9">Password</label>
      <div class="input-icon">
        <i class="fa fa-lock"></i>
        <input class="form-control placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" id="password" name="_password"/>
      </div>
    </div>
    <div class="form-actions">
      <button type="submit" class="btn blue pull-right"  value="Login">
      Login <i class="m-icon-swapright m-icon-white"></i>
      </button>
    </div>
    
    
    <div class="create-account">
      <p>
         Don't have an account yet ?&nbsp; <a href="javascript:;" id="register-btn">
        Create an account </a>
      </p>
    </div>
  </form>
  <!-- END LOGIN FORM -->
 

  <!-- END REGISTRATION FORM -->
</div>
<!-- END LOGIN -->
